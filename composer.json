{
    "name": "contao/mobile-page-layout-bundle",
    "type": "contao-bundle",
    "description": "Adds a mobile page layout to Contao 4",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Yanick Witschi",
            "homepage": "https://github.com/toflar"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "contao/core-bundle": "^4.9",
        "symfony/http-kernel": "^4.4 || ^5.4"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.3.1",
        "contao/test-case": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.12",
        "php-http/guzzle6-adapter": "^1.1",
        "phpunit/phpunit": "^7.0",
        "symfony/phpunit-bridge": "^3.4.5"
    },
    "extra": {
        "contao-manager-plugin": "Contao\\MobilePageLayoutBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Contao\\MobilePageLayoutBundle\\": "src/"
        },
        "exclude-from-classmap": [
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Contao\\MobilePageLayoutBundle\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/contao/contao/issues",
        "forum": "https://community.contao.org",
        "source": "https://github.com/contao/mobile-page-layout-bundle",
        "docs": "https://docs.contao.org"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true
        }
    }
}
